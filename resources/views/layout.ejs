    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>

    <!-- Maplibre JS -->
    <script src="https://unpkg.com/maplibre-gl@2.4.0/dist/maplibre-gl.js"></script>
</head>
<body>
    <!-- Pre-loader -->
    <div id="preloader"></div>

    <!-- navbar -->
    <div class="nav" style="padding-bottom: 1rem;">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="/"> <img class="navLogo" src="/img/Logo/logoOrangeFull.png" alt=""></a>
                
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse dropDownCentre" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item navSec">
                            <a href="/menu">Menu</a>
                        </li>
                        <% if(user){ %>
                            <li class="nav-item navSec">
                                <a style="display: flex; gap: 0.5rem;" href="/me" class="experience-nav navSec"><img style="width: 2rem; border-radius: 100%;" src="/img/userPic/<%= user.photo %>" alt="user"> <p class="dropDownName"><%= user.username.split(' ')[0] %></p></a>
                            </li>
                            <li class="nav-item navSec">
                                <a class="skill-nav navSec logoutBtn" href="#">Logout</a>
                            </li>
                        <% } else { %>
                            <li class="nav-item navSec">
                                <a class="project-nav navSec" href="/register">Register</a>
                            </li>
                            <li class="nav-item navSec">
                                <a class="project-nav navSec" href="/login">Login</a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center cartLink">
                                <span id="cartCounter" class="text-white font-bold pr-2"><%= session.cart ? session.cart.totalQty : '' %></span>
                                <img src="/img/cart.png" alt="">
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <div class="actualBody">
        <%- body %>
    </div>

    <footer>
        <!-- 3 te grid col thakbe -->
        <!-- 1) company logo, tagLines, 2) Resources: Register, login, Menu. 3) Social media liks and contact us -->
        <div class="footercol1">
            <img class="logoImg" src="/img/Logo/logoOrangeHalf.png" alt="">
            <p>Start Eating Well</p>
            <p class="copy">&copy; MealMate, 2023. All right reserved</p>
        </div>
        <div class="footercol2">
            <p class="footerHeading">Resources</p>
            <ul>
                <li><a class="footerALink" href="/register"> Create Account </a></li>
                <li><a class="footerALink" href="/login"> Log in </a></li>
                <li><a class="footerALink" href="/menu"> Go to Menu </a></li>
            </ul>
        </div>
        <div class="footercol3">
            <div class="socialLink">
                <a href="/"><i class="lab la-facebook socialLogo"></i></a>
                <a href="/"><i class="lab la-instagram socialLogo"></i></a>
                <a href="/"><i class="lab la-twitter socialLogo"></i></a>
            </div>
            <div class="contactLink">
                <a href="mailto:roynilarghya@gmail.com?subject=MealMate%20||%20Query:%20" ><i class="las la-phone-alt updateIcon"></i>Contact Us</a>
            </div>
        </div>
    </footer>

    <!-- OWN JS -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/app.js"></script>


    <script>
        // When page loads, hide pre-loader
        const loader= document.querySelector('#preloader');
        loader.style.opacity= 1;
        function fade(){
            (loader.style.opacity-=.1)<0?loader.style.display="none":setTimeout(fade,40)
        }
        window.addEventListener('load', (evt) => {
            fade();
        });
    </script>

</body>
</html>